// Custom styles.
body .hide{display:none;}
.hide ul {list-style: none;}
.hide li { padding-top: 8px; list-style: none;}
a.external {padding-right:13px;background:url(/images/icons.gif) no-repeat right 1px;}
a.external:hover {background-position:right -15px;}

.headband {
  box-shadow: 0px 2px 10px #616161;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 1;
}
.bottomband {
  position: fixed;
  background: url(/images/bg_wrap.jpg) repeat-x;
  width: 100%;
  height: 200px;
  bottom: 0%;
  z-index: -1;
  background-position: 280px;
}
